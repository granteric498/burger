<img src="assets/img/burger.png" alt="burger">

<h1>Eat-Da-Burger!</h1>
<div class="container">
    <div id="allBurgers" class="row">
        <div id="notDevoured">
            <div class="col-md-12">
                <h2>Burgers ready to eat!</h2>

                <ul>
                    {{#each burgers}}
                        {{#unless devoured}}
                            {{> burgers/burger-block devoured=true}}
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>

        <div id="isDevoured">
            <div class="col-md-12">
                <h2>Burgers that have been devoured!</h2>

                <ul>
                    {{#each burgers}}
                        {{#if devoured}}
                            {{> burgers/burger-block devoured=false}}
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div id="addBurger" class="row">
        <div class="col-md-12">
            <h2>Add a burger to be devoured!</h2>
            <form class="create-form">
                <div>
                    <input type="text" id="burgerInput">
                </div>

                <div>
                    <button type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>